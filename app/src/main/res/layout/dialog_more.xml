<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background"
        android:orientation="vertical"
        android:paddingBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/dialog_more_close"
            android:layout_width="50dp" android:layout_height="50dp" android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@android:color/transparent" android:contentDescription="@string/close"
            android:scaleType="centerCrop"
            android:tint="@color/mauve" app:srcCompat="@drawable/cancel"/>
        <TextView
            android:id="@+id/textViewRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="start"
            android:layout_marginStart="30dp"
            android:text="@string/rate" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?attr/colorOnSurface"/>
        <TextView
            android:id="@+id/textViewMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="start"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
            android:text="@string/more_from_me" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?attr/colorOnSurface"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>