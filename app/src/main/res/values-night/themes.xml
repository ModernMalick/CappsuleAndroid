<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cappsule" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/mauveLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pinkDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Background color. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/greyDark</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Error color. -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:navigationBarColor">@color/mauve</item>

        <item name="android:windowAnimationStyle">@null</item>
        <item name="selected_background">@drawable/selected_background_dark</item>
        <item name="dialogCornerRadius">10dp</item>
    </style>

    <style name="MyStyle.Preference.v21" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">@color/white</item>
    </style>
</resources>